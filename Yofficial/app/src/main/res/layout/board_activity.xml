<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/board_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="탕수육을 왜먹냐? 그 돈으로 국밥 3그릇을 먹지" />

    <TextView
        android:id="@+id/board_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="박현우 | 2018/01/01" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66bdbdbd" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/board_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="너무너무 맛있는 국밥 나는 오늘도 국밥을 먹었다" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/see_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="see_comment"
            android:text="댓글보기" />

        <Button
            android:id="@+id/board_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="delete_board"
            android:text="게시글 삭제" />
    </LinearLayout>

</LinearLayout>