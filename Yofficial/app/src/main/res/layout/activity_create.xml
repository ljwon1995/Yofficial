                </TableRow>


            </TableLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/insertTimeButton"
                android:text="단계 추가"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/citrus_createButton"
                android:text="레시피 만들기"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>