<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="#ff9800"
        android:textColor="#FFFFFF"
        android:paddingLeft="30dp"
        android:paddingBottom="40dp"
        android:text="▶ 생각 하시는 맛을 입력해 주세요!" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingLeft="38dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="감칠맛:"
            android:textColor="#5E5E5E"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/savory_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="0"
            android:textColor="#F86100"
            android:textSize="18sp" />


    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar_savory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:max="100"
        android:layout_weight="1"
        android:progressDrawable="@drawable/seekbar"
        android:thumb="@drawable/seekbar_thumb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="38dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="달달:"
            android:textColor="#5E5E5E"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/sweet_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="0"
            android:textColor="#F86100"
            android:textSize="18sp" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar_sweet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:max="100"
        android:layout_weight="1"
        android:paddingBottom="30dp"
        android:progressDrawable="@drawable/seekbar"
        android:thumb="@drawable/seekbar_thumb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="38dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="새콤:"
            android:textColor="#5E5E5E"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/sour_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="0"
            android:textColor="#F86100"
            android:textSize="18sp" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar_sour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:max="100"
        android:layout_weight="1"
        android:paddingBottom="30dp"
        android:progressDrawable="@drawable/seekbar"
        android:thumb="@drawable/seekbar_thumb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="38dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="매콤:"
            android:textColor="#5E5E5E"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/spicy_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="0"
            android:textColor="#F86100"
            android:textSize="18sp" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar_spicy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:max="100"
        android:layout_weight="1"
        android:paddingBottom="30dp"
        android:progressDrawable="@drawable/seekbar"
        android:thumb="@drawable/seekbar_thumb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="38dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="짭짤:"
            android:textColor="#5E5E5E"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/salty_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="0"
            android:textColor="#F86100"
            android:textSize="18sp" />

    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar_salty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:max="100"
        android:layout_weight="1"
        android:paddingBottom="30dp"
        android:progressDrawable="@drawable/seekbar"
        android:thumb="@drawable/seekbar_thumb" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#E7E7E7"
        android:onClick="onButtonClicked"
        android:text="추천받기!"
        android:textColor="#ff7a00" />

</LinearLayout>